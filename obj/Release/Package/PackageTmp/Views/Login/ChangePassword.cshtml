@model SanskarHospital.Models.Property
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-info alert-dismissable">
            <button type="button" data-dismiss="alert" aria-hidden="true" class="close">×</button>
            <strong>@TempData["msg"]</strong>
        </div>
    }
    <div class="row">
        <div class="col-lg-12">
            <div class="card ">
                <div class="card-header bg-info">
                    <h4 class="m-b-0 text-white"> Change Password</h4>
                </div>
                <div class="card-body">
                    <form action="/Login/ChangePassword" method="post" class="form-horizontal" enctype="multipart/form-data">
                        <div class="form-body">
                            <h3 class="box-title">Change Password</h3>
                            <hr class="m-t-0 m-b-40">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group ">
                                        <label class="control-label text-right ">Old Password <span class="require">*</span></label>
                                        @Html.PasswordFor(model => model.Condition3, new { @placeholder = "Old Password", @required = "required", @class = "form-control" })

                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group ">
                                        <label class="control-label text-right ">New Password <span class="require">*</span></label>
                                        @Html.PasswordFor(model => model.Condition2, new { @id = "Password", @placeholder = "New Password", @required = "required", @class = "form-control" })

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group ">
                                        <label class="control-label text-right ">Confirm Password <span class="require">*</span></label>
                                        @Html.PasswordFor(model => model.Condition4, new { @id = "ConfPassword", @placeholder = "Confirm Password", @required = "required", @class = "form-control", @onkeyup = "checkPass(); return false;" })

                                    </div>
                                </div>
                            </div>


                            <hr>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                <button type="submit" id="submit1" class="btn btn-success">Submit</button>
                                                @*<button type="button" class="btn btn-inverse">Cancel</button>*@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6"> </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/jquery-3.4.0.min.js"></script>
@*<script src="/js/jquery-3.2.1.min.js"></script>*@
<script>
    function checkPass() {

        var pass1 = document.getElementById('Password');
        var pass2 = document.getElementById('ConfPassword');
        var btn = document.getElementById('PassEdit');

        var message = document.getElementById('MSG1');

        var goodColor = "#66cc66";
        var badColor = "#ff6666";

        if (pass1.value == pass2.value) {
            pass2.style.backgroundColor = "#fff";
            message.style.color = goodColor;
            btn.disabled = false;
            message.innerHTML = "Password Match!"
        } else {
            pass2.style.backgroundColor = badColor;
            message.style.color = badColor;
            btn.disabled = true;
            message.innerHTML = "Password Do Not Match!"
        }
    }
</script>

