@model SanskarHospital.Models.DrugModel
@{
    ViewBag.Title = "Drug";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    TempData["DrugSetting"] = "class=" + "active";
    TempData["DrugInfo"] = "class=" + "active";
}

<div class="container-fluid">
    @if (TempData["MSG"] != null)
    {
        <div class="alert alert-info alert-dismissable">
            <button type="button" data-dismiss="alert" aria-hidden="true" class="close">×</button>
            <strong>@TempData["MSG"]</strong>
        </div>
    }
    <div class="row">
        <div class="col-lg-12">
            <div class="card ">
                <div class="card-header bg-info">
                    <h4 class="m-b-0 text-white"> Drug</h4>
                </div>
                <div class="card-body">
                    <form action="/Admin/Drug" method="post" class="form-horizontal" enctype="multipart/form-data">
                        <div class="form-body">
                            <h3 class="box-title">Add/Edit Drug</h3>
                            <hr class="m-t-0 m-b-40">
                            <div class="row">

                                @Html.HiddenFor(model => model.drug_id)

                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label text-right">Drug Name<span class="require"></span></label>
                                        @Html.TextBoxFor(model => model.drug_name, new { @class = "form-control", @required = "true", @placeholder = "Drug Name", @maxlength = "100" })
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                <button type="submit" class="btn btn-success">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6"> </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"> Drug List</h4>
                    <h6 class="card-subtitle">Export data to Copy, CSV, Excel, PDF & Print</h6>
                    <div class="table-responsive m-t-30">
                        <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Drug Name</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Drug Name</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @if (ViewBag.druglist != null)
                                {
                                    foreach (SanskarHospital.Models.DrugModel i in ViewBag.druglist)
                                    {
                                        <tr id="Busval_@i.drug_id">

                                            <td>@i.drug_id</td>
                                            <td>@i.drug_name</td>

                                            <td class="text-nowrap">
                                                <a href="/Admin/Drug/@i.drug_id" data-toggle="tooltip" data-original-title="Edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                                <a onclick="RemoveDrug(@i.drug_id)" href="javascript:void(0)" data-toggle="tooltip" data-original-title="Remove"> <i class="fa fa-close text-danger"></i> </a>
                                            </td>

                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
<script>
    function RemoveDrug(id) {
        if (confirm("Are you sure?")) {
            $.getJSON('/Admin/DeleteDrug/' + id, function (data) {
                if (data != '') {
                    $('#Busval_' + id).remove();
                    $.toast({
                        heading: 'Welcome To Sanskar Hospital',
                        text: 'Data Deleted Successfully..!',
                        position: 'top-right',
                        loaderBg: '#ff6849',
                        icon: 'success',
                        hideAfter: 3500,
                        stack: 6
                    });

                }
                else {
                    $.toast({
                        heading: 'Welcome To Sanskar Hospital',
                        text: 'Oops Something going wrong..!',
                        position: 'top-right',
                        loaderBg: '#ff6849',
                        icon: 'error',
                        hideAfter: 3500

                    });
                }

            });
        }
        return false;
    }
</script>
