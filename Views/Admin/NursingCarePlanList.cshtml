
@{
    ViewBag.Title = "Nursing Care Plan List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int co = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Nursing Care Plan List</h4>
                    <div><a href="/Admin/NursingCarePlan" style="text-decoration:underline !important">Go Back</a></div>
                    <br />
                    <h6 class="card-subtitle">Export data to Copy, CSV, Excel, PDF & Print</h6>
                    <div class="table-responsive m-t-30">
                        <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name Of Patient</th>
                                    <th>Nursing Diagnosis</th>
                                    <th>Date</th>
                                    <th>Nursing Care Plan</th>
                                    <th>Nursing Inventions</th>
                                    <th>Outcomes</th>
                                    <th>Duty Shift</th>
                                    <th>Name Of Nurse</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Name Of Patient</th>
                                    <th>Nursing Diagnosis</th>
                                    <th>Date</th>
                                    <th>Nursing Care Plan</th>
                                    <th>Nursing Inventions</th>
                                    <th>Outcomes</th>
                                    <th>Duty Shift</th>
                                    <th>Name Of Nurse</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @if (ViewBag.nursingcareplanlist != null)
                                {
                                    foreach (SanskarHospital.Models.NursingCarePlanModel i in ViewBag.nursingcareplanlist)
                                    {
                                        <tr id="Busval_@i.patient_id">

                                            <td>@(++co)</td>
                                            <td>@i.patient_id</td>
                                            <td>@i.nursing_diagnosis</td>
                                            <td>@i.date</td>
                                            <td>@i.nursing_care_plan</td>
                                            <td>@i.nursing_interventions</td>
                                            <td>@i.outcomes</td>
                                            <td>@i.duty_shift</td>
                                            <td>@i.nurse_id</td>

                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

