
@{
    ViewBag.Title = "Patient List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int co = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Patient List</h4>
                <div><a href="/Admin/Patient" style="text-decoration:underline !important">Go Back</a></div>
                <br />
                <h6 class="card-subtitle">Export data to Copy, CSV, Excel, PDF & Print</h6>
                <div class="table-responsive m-t-30">
                    <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>UHID</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Mobile</th>
                                <th>Gender</th>
                                <th>DOB</th>
                                <th>Identification Mark</th>
                                <th>Marital Status</th>
                                <th>Habit</th>
                                <th>Blood Group</th>
                                <th>DOB</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>UHID</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Mobile</th>
                                <th>Gender</th>
                                <th>DOB</th>
                                <th>Identification Mark</th>
                                <th>Marital Status</th>
                                <th>Habit</th>
                                <th>Blood Group</th>
                                <th>DOB</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @if (ViewBag.patientlist != null)
                            {
                                foreach (SanskarHospital.Models.PatientModel i in ViewBag.patientlist)
                                {
                                    <tr id="Busval_@i.patient_id">

                                        <td>@(++co)</td>
                                        <td>@i.patient_uhid</td>
                                        <td>@i.patient_name</td>
                                        <td>@i.patient_address</td>
                                        <td>@i.patient_mobile</td>
                                        <td>@i.patient_sex</td>
                                        <td>@i.patient_dob</td>
                                        <td>@i.patient_identification_mark</td>
                                        <td>@i.patient_marital_status</td>
                                        <td>@i.patient_habit</td>
                                        <td>@i.patient_blood_group</td>
                                        <td>@i.patient_dob</td>

                                        @if (i.is_active == "ACTIVE")
                                        {
                                            <td><button class="btn btn-success btn-rounded">ACTIVE</button></td>
                                        }
                                        else
                                        {
                                            <td><button class="btn btn-danger btn-rounded">DEACTIVE</button></td>
                                        }

                                        <td class="text-nowrap">
                                            <a href="/Admin/Patient/@i.patient_id" data-toggle="tooltip" data-original-title="Edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                            <a onclick="RemovePatient(@i.patient_id)" href="javascript:void(0)" data-toggle="tooltip" data-original-title="Remove"> <i class="fa fa-close text-danger"></i> </a>
                                        </td>

                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

