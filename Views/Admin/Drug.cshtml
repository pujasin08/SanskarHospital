@model SanskarHospital.Models.DrugModel
@{
    ViewBag.Title = "Drug";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    TempData["DrugSetting"] = "class=" + "active";
    TempData["DrugInfo"] = "class=" + "active";
}

<div class="container-fluid">
    @if (TempData["MSG"] != null)
    {
        <div class="alert alert-info alert-dismissable">
            <button type="button" data-dismiss="alert" aria-hidden="true" class="close">×</button>
            <strong>@TempData["MSG"]</strong>
        </div>
    }
    <div class="row">
        <div class="col-lg-12">
            <div class="card ">
                <div class="card-header bg-info">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 class="m-b-0 text-white">Drug</h4>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form action="/Admin/Drug" method="post" class="form-horizontal" enctype="multipart/form-data">
                        <div class="form-body">
                            <a href="/Admin/DrugList" style="text-decoration:underline !important">Go to List</a>
                            <hr class="m-t-0 m-b-40">
                            <div class="row">

                                @Html.HiddenFor(model => model.drug_id)

                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label text-right">Drug Name<span class="require"></span></label>
                                        @Html.TextBoxFor(model => model.drug_name, new { @class = "form-control", @required = "true", @placeholder = "Drug Name", @maxlength = "100" })
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                <button type="submit" class="btn btn-success">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6"> </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<script>
    function RemoveDrug(id) {
        if (confirm("Are you sure?")) {
            $.getJSON('/Admin/DeleteDrug/' + id, function (data) {
                if (data != '') {
                    $('#Busval_' + id).remove();
                    $.toast({
                        heading: 'Welcome To Sanskar Hospital',
                        text: 'Data Deleted Successfully..!',
                        position: 'top-right',
                        loaderBg: '#ff6849',
                        icon: 'success',
                        hideAfter: 3500,
                        stack: 6
                    });

                }
                else {
                    $.toast({
                        heading: 'Welcome To Sanskar Hospital',
                        text: 'Oops Something going wrong..!',
                        position: 'top-right',
                        loaderBg: '#ff6849',
                        icon: 'error',
                        hideAfter: 3500

                    });
                }

            });
        }
        return false;
    }
</script>
