
@{
    ViewBag.Title = "Treatment Chart List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int co = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Treatment Chart List</h4>
                    <div><a href="/Admin/TreatmentChartList" style="text-decoration:underline !important">Go Back</a></div>
                    <br />
                    <h6 class="card-subtitle">Export data to Copy, CSV, Excel, PDF & Print</h6>
                    <div class="table-responsive m-t-30">
                        <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name Of Patient</th>
                                    <th>Day</th>
                                    <th>Name Of Doctor</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Sr No.</th>
                                    <th>Name Of Drug</th>
                                    <th>Dose</th>
                                    <th>Dilution</th>
                                    <th>Route</th>
                                    <th>Frequency</th>
                                    <th>Time Of Admit</th>
                                    <th>Name Of Nurse</th>
                                    <th>Doctor</th>
                                    <th>Risk Type</th>
                                    <th>RBS Time</th>
                                    <th>RBS</th>
                                    <th>RBS Insulin</th>
                                    <th>RBS Nurse</th>
                                    <th>RBS Doctor</th>
                                    <th>Discharge Plan</th>
                                    <th>Investigation Plan</th>
                                    <th>Diet Advice</th>
                                    <th>Consultant Note</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Name Of Patient</th>
                                    <th>Day</th>
                                    <th>Name Of Doctor</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Sr No.</th>
                                    <th>Name Of Drug</th>
                                    <th>Dose</th>
                                    <th>Dilution</th>
                                    <th>Route</th>
                                    <th>Frequency</th>
                                    <th>Time Of Admit</th>
                                    <th>Name Of Nurse</th>
                                    <th>Doctor</th>
                                    <th>Risk Type</th>
                                    <th>RBS Time</th>
                                    <th>RBS</th>
                                    <th>RBS Insulin</th>
                                    <th>RBS Nurse</th>
                                    <th>RBS Doctor</th>
                                    <th>Discharge Plan</th>
                                    <th>Investigation Plan</th>
                                    <th>Diet Advice</th>
                                    <th>Consultant Note</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @if (ViewBag.treatmentchartlist != null)
                                {
                                    foreach (SanskarHospital.Models.TreatmentChartModel i in ViewBag.treatmentchartlist)
                                    {
                                        <tr id="Busval_@i.patient_id">

                                            <td>@(++co)</td>
                                            <td>@i.day</td>
                                            <td>@i.doctor_id</td>
                                            <td>@i.date</td>
                                            <td>@i.time</td>
                                            <td>@i.sr_no</td>
                                            <td>@i.drug_id</td>
                                            <td>@i.dose</td>
                                            <td>@i.dilution</td>
                                            <td>@i.route</td>
                                            <td>@i.frequency</td>
                                            <td>@i.admit_time</td>
                                            <td>@i.nurse_id</td>
                                            <td>@i.doctor</td>
                                            <td>@i.risk_type</td>
                                            <td>@i.rbs_time</td>
                                            <td>@i.rbs</td>
                                            <td>@i.rbs_insulin</td>
                                            <td>@i.rbs_nurse</td>
                                            <td>@i.rbs_doctor</td>
                                            <td>@i.discharge_plan</td>
                                            <td>@i.investigation_plan</td>
                                            <td>@i.diet_advice</td>
                                            <td>@i.consultant_note</td>

                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

