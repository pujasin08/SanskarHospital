
@{
    ViewBag.Title = "Doctor Progress Note List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int co = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Doctor Progress Note List</h4>
                    <div><a href="/Admin/DoctorProgressNote" style="text-decoration:underline !important">Go Back</a></div>
                    <br />
                    <h6 class="card-subtitle">Export data to Copy, CSV, Excel, PDF & Print</h6>
                    <div class="table-responsive m-t-30">
                        <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name Of Patient</th>
                                    <th>Location</th>
                                    <th>Date</th>
                                    <th>Patient Complain</th>
                                    <th>Temp</th>
                                    <th>Pulse</th>
                                    <th>BP</th>
                                    <th>SPO2</th>
                                    <th>Time</th>
                                    <th>Shift</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Name Of Patient</th>
                                    <th>Location</th>
                                    <th>Date</th>
                                    <th>Patient Complain</th>
                                    <th>Temp</th>
                                    <th>Pulse</th>
                                    <th>BP</th>
                                    <th>SPO2</th>
                                    <th>Time</th>
                                    <th>Shift</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @if (ViewBag.doctorprogressnotelist != null)
                                {
                                    foreach (SanskarHospital.Models.DoctorProgressNoteModel i in ViewBag.doctorprogressnotelist)
                                    {
                                        <tr id="Busval_@i.patient_id">

                                            <td>@(++co)</td>
                                            <td>@i.patient_id</td>
                                            <td>@i.location</td>
                                            <td>@i.date</td>
                                            <td>@i.patient_complain</td>
                                            <td>@i.temp</td>
                                            <td>@i.pulse</td>
                                            <td>@i.bp</td>
                                            <td>@i.spo2</td>
                                            <td>@i.time</td>
                                            <td>@i.shift</td>

                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

