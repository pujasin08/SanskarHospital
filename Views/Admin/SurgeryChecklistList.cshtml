
@{
    ViewBag.Title = "Surgery Checklist List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int co = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Surgery Checklist List</h4>
                    <div><a href="/Admin/SurgeryChecklist" style="text-decoration:underline !important">Go Back</a></div>
                    <br />
                    <h6 class="card-subtitle">Export data to Copy, CSV, Excel, PDF & Print</h6>
                    <div class="table-responsive m-t-30">
                        <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name Of Patient</th>
                                    <th>Name Of Surgery</th>
                                    <th>Name Of Doctor</th>
                                    <th>Name Of Anaesthesia</th>
                                    <th>Surgery Consent</th>
                                    <th>Anaesthesia Assessment</th>
                                    <th>Pre OP Order</th>
                                    <th>NBM Order</th>
                                    <th>Patient Shaving</th>
                                    <th>Pre OP Fitness</th>
                                    <th>Pre OP Investigation</th>
                                    <th>Surgery Note</th>
                                    <th>Post OP Order</th>
                                    <th>HPE</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Name Of Patient</th>
                                    <th>Name Of Surgery</th>
                                    <th>Name Of Doctor</th>
                                    <th>Name Of Anaesthesia</th>
                                    <th>Surgery Consent</th>
                                    <th>Anaesthesia Assessment</th>
                                    <th>Pre OP Order</th>
                                    <th>NBM Order</th>
                                    <th>Patient Shaving</th>
                                    <th>Pre OP Fitness</th>
                                    <th>Pre OP Investigation</th>
                                    <th>Surgery Note</th>
                                    <th>Post OP Order</th>
                                    <th>HPE</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @if (ViewBag.surgerychecklist != null)
                                {
                                    foreach (SanskarHospital.Models.SurgeryChecklistModel i in ViewBag.surgerychecklist)
                                    {
                                        <tr id="Busval_@i.patient_id">

                                            <td>@(++co)</td>
                                            <td>@i.patient_id</td>
                                            <td>@i.surgery_id</td>
                                            <td>@i.doctor_id</td>
                                            <td>@i.anaesthesia_id</td>
                                            <td>@i.surgery_consent</td>
                                            <td>@i.anaesthesia_assessment</td>
                                            <td>@i.pre_op_order</td>
                                            <td>@i.nbm_order</td>
                                            <td>@i.patient_shaving</td>
                                            <td>@i.pre_op_fitness</td>
                                            <td>@i.pre_op_investigation</td>
                                            <td>@i.surgery_note</td>
                                            <td>@i.post_op_order</td>
                                            <td>@i.hpe</td>

                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

