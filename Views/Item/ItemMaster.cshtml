@model SanskarHospital.Models.ItemModel
@{
    ViewBag.Title = "Item Master";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    TempData["ItemSetting"] = "class=" + "active";
    TempData["ItemMaster"] = "class=" + "active";
}

<div class="container-fluid">
    @if (TempData["MSG"] != null)
    {
        <div class="alert alert-info alert-dismissable">
            <button type="button" data-dismiss="alert" aria-hidden="true" class="close">×</button>
            <strong>@TempData["MSG"]</strong>
        </div>
    }
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header bg-info">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 class="m-b-0 text-white"> Item Master</h4>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form action="/Item/ItemMaster" method="post" class="form-horizontal" enctype="multipart/form-data">
                        <div class="form-body">
                            <a href="/Item/ItemMasterList" style="text-decoration:underline !important">Go to List</a>
                            <hr class="m-t-0 m-b-40">


                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label text-right">Item<span class="require"></span></label>
                                        @Html.TextBoxFor(model => model.item_name, new { @class = "form-control", @required = "true", @placeholder = "Item" })
                                        @Html.HiddenFor(model => model.item_id)
                                    </div>
                                </div>
                            </div>

                            <hr>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                <button type="submit" class="btn btn-success">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6"> </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>

